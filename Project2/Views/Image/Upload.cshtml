@model Project2.Models.UploadImageModel

<div class="container upload-container">
    <div class="row upload-container">
        <div class="upload-form drop-shadow">
            <form asp-action="UploadNewImage"
                  method="post" enctype="multipart/form-data" id="upload-form">
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control-lg" />
                </div>
                <div class="form-group">
                    <label asp-for="Geolocation" class="control-label"></label>
                    <input asp-for="Geolocation" class="form-control-lg"/>
                </div>
                <div class="form-group">
                    <label asp-for="Tags"class="control-label"></label>
                    <input asp-for="Tags" class="form-control-lg"/>
                </div>
                <div>
                    <label class="btn btn-outline-dark">
                        Browse for Image
                        <input type="file" name="file" style="display : none"/>
                    </label>
                </div>
                <div class="submit">
                    <button type="submit" id="btn-upload" class="btn btn-outline-primary">
                        Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>